/* 液态玻璃按钮系统 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  border: none;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
}

.btn::after {
  border: none;
}

.btn-primary {
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 154, 158, 0.3);
  color: #FF6B6B;
  box-shadow: 
    0 8rpx 32rpx 0 rgba(255, 154, 158, 0.15),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.3);
}

.btn-primary:hover {
  transform: translateY(-2rpx) scale(1.02);
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 
    0 12rpx 48rpx 0 rgba(255, 154, 158, 0.25),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.4);
}

.btn-secondary {
  background: #FFFFFF;
  color: #5B69E8;
  border: 2rpx solid #5B69E8;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.btn-secondary:hover {
  background: #F8F9FF;
  transform: translateY(-2rpx);
}

.btn-ghost {
  background: transparent;
  color: #5B69E8;
  border: 2rpx solid #5B69E8;
}

.btn-ghost:hover {
  background: #5B69E8;
  color: #FFFFFF;
}

.btn-disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none !important;
}

.btn-small {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

/* 液态玻璃卡片系统 */
.card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  box-shadow: 
    0 8rpx 32rpx 0 rgba(31, 38, 135, 0.1),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.3);
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
  animation: cardBreathing 4s ease-in-out infinite;
}

@keyframes cardBreathing {
  0%, 100% { 
    box-shadow: 
      0 8rpx 32rpx 0 rgba(31, 38, 135, 0.1),
      inset 0 0 0 1rpx rgba(255, 255, 255, 0.3);
  }
  50% { 
    box-shadow: 
      0 12rpx 48rpx 0 rgba(31, 38, 135, 0.15),
      inset 0 0 0 1rpx rgba(255, 255, 255, 0.4);
  }
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(255, 154, 158, 0.02) 0%,
    rgba(250, 208, 196, 0.05) 100%);
  border-radius: 20rpx;
  pointer-events: none;
}

.card-header {
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #E5E7EB;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.card-subtitle {
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
}

/* 通用表单样式 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  margin-bottom: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.form-input {
  width: 100%;
  padding: 16rpx 24rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
  background: #FFFFFF;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #5B69E8;
  box-shadow: 0 0 0 6rpx rgba(91, 105, 232, 0.1);
}

.form-input::placeholder {
  color: #999999;
}

/* 优雅加载状态 - 呼吸点动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

.loading-dots {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.loading-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF9A9E 0%, #FAD0C4 100%);
  animation: dotBreathing 1.8s ease-in-out infinite;
}

.loading-dot:nth-child(2) { animation-delay: 0.3s; }
.loading-dot:nth-child(3) { animation-delay: 0.6s; }

@keyframes dotBreathing {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1.2);
    opacity: 1;
  }
}

/* 涟漪效果动画 */
.ripple-effect {
  position: relative;
  overflow: hidden;
}

.ripple-effect::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 154, 158, 0.3);
  transform: translate(-50%, -50%);
  animation: ripple 0.8s ease-out;
}

@keyframes ripple {
  to {
    width: 200rpx;
    height: 200rpx;
    opacity: 0;
  }
}

/* 通用动画类 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(20rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.scale-in {
  animation: scaleIn 0.3s ease-out;
}

@keyframes scaleIn {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 24rpx 16rpx;
  }
  
  .btn {
    padding: 16rpx 24rpx;
    font-size: 26rpx;
  }
  
  .card {
    padding: 16rpx;
  }
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

/* CSS 变量系统 - 温暖液态玻璃主题 */
.theme-warm-glass {
  --color-primary: #FF6B6B;
  --color-secondary: #FF9A9E;
  --color-background: #FAFAF8;
  --color-card: rgba(255, 255, 255, 0.8);
  --color-border: rgba(255, 255, 255, 0.3);
  --color-text-primary: #2D3748;
  --color-text-secondary: #4A5568;
  --color-shadow: rgba(31, 38, 135, 0.1);
  --blur-primary: blur(20rpx);
  --blur-secondary: blur(12rpx);
  --gradient-warm: linear-gradient(135deg, #FF9A9E 0%, #FAD0C4 100%);
  --gradient-glass: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.6) 100%);
}

/* 呼吸感动效基础类 */
.breathing {
  animation: gentleBreathing 3s ease-in-out infinite;
}

@keyframes gentleBreathing {
  0%, 100% { opacity: 0.8; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.01); }
}

/* 液态触摸反馈 */
.touch-feedback {
  transition: all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.touch-feedback:active {
  transform: scale(0.98);
  opacity: 0.9;
}